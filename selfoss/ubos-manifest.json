{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "defaultcontext" : "/selfoss",
            "depends" : [
                "php",
                "php-apache",
                "smtp-server"
            ],
            "apache2modules" : [
                "php",
                "access_compat",
                "rewrite"
            ],
            "phpmodules" : [
                "iconv",
                "mysqli",
                "pdo_mysql"
            ],
            "appconfigitems" : [
                {
                    "type" : "directorytree",
                    "names" : [
                        ".htaccess",
                        "cliupdate.php",
                        "common.php",
                        "controllers",
                        "daos",
                        "defaults.ini",
                        "helpers",
                        "index.php",
                        "run.php",
                        "spouts",
                        "templates",
                        "vendor"
                    ],
                    "source" : "selfoss/$1",
                    "uname" : "root",
                    "gname" : "root",
                    "filepermissions" : "preserve",
                    "dirpermissions"  : "preserve"
                },
                {
                    "type" : "directorytree",
                    "name"  : "data",
                    "source" : "selfoss/$1",
                    "retentionpolicy" : "keep",
                    "retentionbucket" : "datadir",
                    "filepermissions" : "preserve",
                    "dirpermissions"  : "preserve",
                    "uname"       : "${apache2.uname}",
                    "gname"       : "${apache2.gname}"
                },
                {
                    "type" : "directorytree",
                    "name"  : "public",
                    "source" : "selfoss/$1",
                    "filepermissions" : "preserve",
                    "dirpermissions"  : "preserve",
                    "uname"       : "${apache2.uname}",
                    "gname"       : "${apache2.gname}"
                },
                {
                    "type"   : "file",
                    "name"   : "config.ini",
                    "template"     : "tmpl/config.ini.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"   : "file",
                    "name"   : "${appconfig.cronjobfile}",
                    "template"     : "tmpl/cronjob.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type" : "systemd-service",
                    "name" : "smtp-server@${appconfig.appconfigid}"
                }
            ],
            "installers" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/first-visit.pl"
                }
            ],
            "upgraders" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/first-visit.pl"
                }
            ]
        },
        "mysql" : {
            "appconfigitems" : [
                {
                    "type"       : "database",
                    "name"       : "maindb",
                    "retentionpolicy"  : "keep",
                    "retentionbucket"  : "maindb",
                    "privileges" : "all privileges"
                }
            ],
            "upgraders" : [
                {
                    "type"         : "sqlscript",
                    "name"         : "maindb",
                    "template"     : "tmpl/fix-trigger-definers.sql.tmpl",
                    "templatelang" : "varsubst"
                }
            ]
        }
    }
}
